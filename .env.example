# ==================================================================
# EXAMZONE ENVIRONMENT CONFIGURATION
# ==================================================================
# Copy this file to .env and fill in the values
# DO NOT commit .env to version control
# ==================================================================

# ==================================================================
# DATABASE CONFIGURATION (REQUIRED)
# ==================================================================
# MongoDB connection string
# Local: mongodb://localhost:27017/examzone
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/examzone
MONGODB_URI=mongodb://localhost:27017/examzone

# ==================================================================
# AUTHENTICATION & SECURITY (REQUIRED)
# ==================================================================
# JWT secret key - use a strong random string (min 32 chars in production)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Session secret for Express sessions
SESSION_SECRET=your-session-secret-change-this-in-production

# JWT token expiration (default: 7d)
JWT_EXPIRES_IN=7d

# ==================================================================
# SERVER CONFIGURATION (REQUIRED)
# ==================================================================
# Port for the backend server
PORT=5000

# Node environment (development | production | test)
NODE_ENV=development

# ==================================================================
# EXTERNAL SERVICES (OPTIONAL)
# ==================================================================
# AI Service URL for question generation and answer checking
AI_SERVICE_URL=http://localhost:8002

# Frontend URL for CORS configuration
FRONTEND_URL=http://localhost:5173

# ==================================================================
# FILE UPLOAD LIMITS (OPTIONAL)
# ==================================================================
# Maximum file upload size in bytes (default: 50MB)
MAX_FILE_SIZE=52428800

# Allowed MIME types for uploads (comma-separated)
ALLOWED_MIME_TYPES=application/pdf,image/png,image/jpeg

# ==================================================================
# EMAIL CONFIGURATION (OPTIONAL - Future Feature)
# ==================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=noreply@examzone.com

# ==================================================================
# RATE LIMITING (OPTIONAL)
# ==================================================================
# Maximum requests per window (default: 100)
RATE_LIMIT_MAX=100

# Time window in minutes (default: 15)
RATE_LIMIT_WINDOW=15

# ==================================================================
# LOGGING (OPTIONAL)
# ==================================================================
# Log level (error | warn | info | debug)
LOG_LEVEL=info

# Enable console logging in production (true | false)
LOG_CONSOLE=false

# ==================================================================
# CORS CONFIGURATION (OPTIONAL)
# ==================================================================
# Allowed origins for CORS (comma-separated)
# Development: http://localhost:5173,http://localhost:5174
# Production: https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174
